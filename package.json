{
  "name": "koa-prisma-template",
  "version": "1.0.0",
  "description": "A Template for Projects using Koa with Prisma",
  "main": "index.js",
  "dependencies": {
    "@prisma/client": "^2.25.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^10.0.0",
    "koa2-cors": "^2.0.6"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/koa": "^2.11.7",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.1",
    "@types/koa2-cors": "^2.0.1",
    "@types/node": "^14.14.22",
    "@types/supertest": "^2.0.10",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "prisma": "^2.16.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "prepare": "npm run db:build",
    "build": "tsc --build",
    "start": "ts-node-dev src/server.ts",
    "test": "jest",
    "test:watch": "npm run test -- --watchAll",
    "db:build": "npx prisma db push --preview-feature",
    "db:commit": "npx prisma migrate dev --preview-feature",
    "db:clean": "prisma migrate reset --preview-feature",
    "clean": "del build /Q /S",
    "rebuild": "npm run clean && npm run prepare && npm run build"
  },
  "author": "Temm",
  "license": "ISC",
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "roots": [
      "<rootDir>/__tests__"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
